        <Button x:Name="buy_button" Content="Купити" HorizontalAlignment="Left" Margin="715,420,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="barcode_reader" HorizontalAlignment="Left" Margin="140,152,0,0" TextWrapping="Wrap" Text="Введіть id..." VerticalAlignment="Top" Width="120"/>
